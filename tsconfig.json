{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "incremental": true,
    "target": "es5",
    "module": "es6",
    "allowJs": true,
    "declaration": true,
    "strict": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./src",
    "outDir": "./build"
  },
  "files": [
  ],
  "paths": {
    "~/*": ["./packages/*/src/*"]
  }
}